@model List<TheMovieDB.Models.MoviesListViewModel>

@{
    ViewBag.Title = "Favorites Movies";
}

<div class="row"></div>
<div class="row"></div>
<div class="row"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">List Of You Favorites Movies</h3>
    </div>


    <div class="panel-body">
        <div class="table table-bordered table-striped">
            <table class="table">
                <thead>
                    <tr>
                        <th>Movie Name</th>
                        <th>Release Date</th>
                        <th>Langauge</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.MovieName</td>
                        <td>@item.ReleaseDate</td>
                        <td>@item.Langauge</td>
                        <td>@Html.ActionLink("Detials", "GetMovieDetails", new { id = item.MovieID, source = "favorites" })</td>
                        <td>@Html.ActionLink("Remove Movie", "RemoveFavorite", new { id = item.MovieID }, new { onclick = "return confirm('Are you sure you want to Delete?');" })</td>

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



